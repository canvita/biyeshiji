/* pages/center/member/member.wxss */
.row {
  position: relativel;
  background: #fff;
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1px solid #eee;
}

.col-left {
  position: absolute;
  left: 0;
  box-sizing: border-box;
  width: 25%;
  text-align: right;
}

.col-right {
  position: absolute;
  left: 25%;
  width: 75%;
  padding-left: 20rpx;
}

input {
  height: 100rpx;
  line-height: 100rpx;
  padding-left: 20rpx;
}

radio {
  margin-left: 20rpx;
}

.remind {
  color: #999;
  font-size: 26rpx;
  margin: 20rpx;
}
.submit-btn {
  margin-top: 60rpx;
  height: 100rpx;
  line-height: 100rpx;
  width: 100%;
  color: #fff;
  font-size: 36rpx;
  background-image: linear-gradient(-269deg, #81b800 0%, #8e9e00 100%);
}

.delete-btn {
  margin-top: 20rpx;
  height: 100rpx;
  line-height: 100rpx;
  width: 100%;
  color: #fff;
  font-size: 36rpx;
  background-image: linear-gradient(-269deg, #b90101 0%, #8f040b 100%);
}