/**app.wxss**/

button, input, select, textarea {
  font-family: inherit;
  font-size: inherit;
  line-height: inherit;
  color: inherit;
  /* -webkit-tap-highlight-color:rgba(0,0,0,0); */
}

input, textarea {
  -webkit-user-modify: read-write-plaintext-only;
  -webkit-appearance: none;
  outline: none;
  border-radius: 0;
  /*-webkit-tap-highlight-color:rgba(0,0,0,0);*/
}

page {
  font-size: 28rpx;
  vertical-align: baseline;
  line-height: 1.5;
  height: 100%;
  position: relative;
  color: #333;
  background: #e2e2e2;
}

ul, li {
  padding: 0;
  margin: 0;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.containerView {
  background: #fff;
}


/* 遮罩 */

.mask {
  z-index: 10;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 1000px;
  background: rgba(0, 0, 0, 0.5);
}

.over-mask {
  z-index: 15;
  position: absolute;
  top: 30%;
  width: 70%;
  left: 15%;
  background: #fff;
  height: 340rpx;
}
